<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Doration Wizard Form -->
        <record id="project_doration_form" model="ir.ui.view">
        	<field name="name">project.doration</field>
        	<field name="model">project.doration</field>
        	<field name="arch" type="xml">
        		<form string="Project Doration">

        			<group>
        				<group>
        					<field name="doration_type" />
        				</group>
        			</group>
        			<footer>
        			<button string="Ok" type="object" name="calc_doration" class="oe-highlight" />
        			Or 
        			<button string="Cancel" class="oe_link" special="cancel"/>
        			</footer>
        		</form>
        	</field>
        </record>

         <!-- Doration Wizard Action -->
        <record id="action_project_doration_form" model="ir.actions.act_window">
        	<field name="name">Doaration</field>
        	<field name="res_model">project.doration</field>
        	<field name="view_type">form</field>
        	<field name="view_mode">form</field>
        	<field name="target">new</field>
        </record>

    </data>
</openerp>